<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Settings" >


    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <!-- Back Button -->
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back_sm" />
        <!-- End Back Button -->

        <TextView
            android:id="@+id/setting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/monserrat_bold"
            android:text="Settings"
            android:textColor="@color/dark"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.30"
            app:layout_constraintStart_toEndOf="@+id/back"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- End Header -->



    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <!-- CardView Folder & Capture Sound -->
            <androidx.cardview.widget.CardView
                android:id="@+id/folder_capture"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="30dp"
                app:cardCornerRadius="20dp"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_view_dev">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- Storage Location -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp" >

                        <!-- Profile Icon -->
                        <ImageView
                            android:id="@+id/folder_icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="15dp"
                            app:srcCompat="@drawable/folder_lg" />
                        <!-- End Profile Icon -->

                        <TextView
                            android:id="@+id/storage_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="80dp"
                            android:layout_marginEnd="70dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/monserrat_bold"
                            android:text="Directory Location"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/storage_path"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="36dp"
                            android:layout_marginStart="80dp"
                            android:layout_marginEnd="70dp"
                            android:fontFamily="@font/monserrat_reguler"
                            android:text="Your Directory Path ..."
                            android:textColor="@color/gray"
                            android:textSize="12sp"/>

                        <!-- Chevron Icon -->
                        <ImageView
                            android:id="@+id/save_chv"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="19dp"
                            android:layout_marginStart="250dp"
                            app:srcCompat="@drawable/chv" />
                        <!-- End Chevron Icon -->

                    </RelativeLayout>
                    <!-- End Storage Location -->



                    <!-- Capture Sound -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp" >

                        <!-- Sound Icon -->
                        <ImageView
                            android:id="@+id/sound_icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            app:srcCompat="@drawable/sound_lg" />
                        <!-- End Sound Icon -->

                        <TextView
                            android:id="@+id/capture_sound"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="80dp"
                            android:layout_marginTop="25dp"
                            android:fontFamily="@font/monserrat_bold"
                            android:text="Capture Sound"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="16sp" />

                        <Switch
                            android:id="@+id/capture_sound_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="225dp"
                            android:layout_marginTop="25dp" />


                    </RelativeLayout>
                    <!-- End Capture Sound -->

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <!--End CardView Develeoper Profile -->




            <!-- CardView Developer Profile -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_dev"
                android:layout_width="310dp"
                android:layout_height="70dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                app:cardCornerRadius="20dp"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toTopOf="@+id/card_view_repo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/folder_capture">

                <!-- Profile Icon -->
                <ImageView
                    android:id="@+id/profile_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    app:srcCompat="@drawable/profile_lg" />
                <!-- End Profile Icon -->

                <TextView
                    android:id="@+id/developer_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:layout_marginEnd="70dp"
                    android:layout_marginTop="22dp"
                    android:fontFamily="@font/monserrat_bold"
                    android:text="Developer Profile"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp" />


                <!-- Chevron Icon -->
                <ImageView
                    android:id="@+id/profile_chv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginStart="250dp"
                    app:srcCompat="@drawable/chv" />
                <!-- End Chevron Icon -->


            </androidx.cardview.widget.CardView>
            <!--End CardView Develeoper Profile -->



            <!-- CardView Github Repository -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_repo"
                android:layout_width="310dp"
                android:layout_height="70dp"
                android:padding="10dp"
                android:layout_marginBottom="30dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintBottom_toTopOf="@id/card_view_about"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <!-- Profile Icon -->
                <ImageView
                    android:id="@+id/github_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    app:srcCompat="@drawable/github_lg" />
                <!-- End Profile Icon -->


                <TextView
                    android:id="@+id/github_repo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:layout_marginEnd="70dp"
                    android:layout_marginTop="22dp"
                    android:fontFamily="@font/monserrat_bold"
                    android:text="Github Repository"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp" />


                <!-- Chevron Icon -->
                <ImageView
                    android:id="@+id/github_chv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginStart="250dp"
                    app:srcCompat="@drawable/chv" />
                <!-- End Chevron Icon -->


            </androidx.cardview.widget.CardView>
            <!--End CardView Github Repository -->



            <!-- CardView About App -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_about"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginBottom="50dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingVertical="20dp">


                    <!-- Logo VF -->
                    <ImageView
                        android:id="@+id/logo_vf"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/logo_lg" />
                    <!-- End Logo VF -->

                    <TextView
                        android:id="@+id/app_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/monserrat_bold"
                        android:text="@string/app_name"
                        android:textColor="@color/dark"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:id="@+id/app_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/monserrat_reguler"
                        android:text="App Version 1.2"
                        android:textColor="@color/dark"
                        android:textSize="12sp"
                        android:layout_marginTop="1dp" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <!--End CardView About App -->


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>
    <!-- End Content -->



</LinearLayout>
